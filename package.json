{
  "name": "paisa_app",
  "version": "1.0.0",
  "description": "Personal Budget Management",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js --ignore client/",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm install && npm run build"
  },
  "engines": {
    "node": "18.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AbhyasKanaujia/paisa_app.git"
  },
  "keywords": [
    "finance",
    "budget",
    "money"
  ],
  "author": "Abhyas Kumar Kanaujia",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/AbhyasKanaujia/paisa_app/issues"
  },
  "homepage": "https://github.com/AbhyasKanaujia/paisa_app#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "mongoose": "^8.13.2"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9"
  }
}
